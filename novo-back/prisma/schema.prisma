// Configuraci√≥n de Prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model Usuario {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  nombre        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("usuarios")
}